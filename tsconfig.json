{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2016",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,                           /* Enable all strict type-checking options. */
    "outDir": "dist",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "lib": ["es2015"],
  "include": [
    "src/**/*",
    "src/**/**/*.json",
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*",
    "benchmark"
  ],
}
