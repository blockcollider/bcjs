{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,                           /* Enable all strict type-checking options. */
    "outDir": "dist",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "lib": ["es2015"],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}
