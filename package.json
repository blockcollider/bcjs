{
  "name": "bc-sdk",
  "version": "0.0.1",
  "description": "SDK to connect to BlockCollider",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsc && ./node_modules/.bin/mkdirp dist/protos && ./node_modules/.bin/cpy ./src/protos/* ./dist/protos/",
    "proto": "./node_modules/.bin/grpc_tools_node_protoc --plugin=./node_modules/.bin/protoc-gen-ts --proto_path=protos --js_out=import_style=commonjs,binary:src/protos protos/*.proto --grpc_out=src/protos --ts_out=\"service=true:src/protos\" --plugin=protoc-gen-grpc=./node_modules/grpc-tools/bin/grpc_node_plugin",
    "start": "tsc && node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "example": "NODE_TLS_REJECT_UNAUTHORIZED=0 BC_RPC_ADDRESS=https://localhost:3001 BC_RPC_SCOOKIE=trololo ts-node examples/get-balance.ts"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "avon": "^3.0.0",
    "bitcoinjs-lib": "^5.1.6",
    "blakejs": "^1.1.0",
    "bn.js": "^5.0.0",
    "es6-promise": "^4.2.8",
    "google-protobuf": "^3.7.1",
    "grpc-web": "^1.0.6",
    "isomorphic-fetch": "^2.2.1",
    "random-js": "1.0.8",
    "secp256k1": "^3.7.1",
    "to-buffer": "^1.1.1"
  },
  "devDependencies": {
    "@improbable-eng/grpc-web": "^0.9.6",
    "@types/bn.js": "^4.11.5",
    "@types/google-protobuf": "^3.7.1",
    "@types/isomorphic-fetch": "^0.0.35",
    "cpy-cli": "^2.0.0",
    "grpc-tools": "^1.8.0",
    "mkdirp": "^0.5.1",
    "ts-protoc-gen": "^0.10.0",
    "tslint": "5.18.0",
    "typescript": "3.5.2"
  }
}
